@import
namespace console {
    const log dynamic
}

@import
def isTouchDevice bool

namespace Controller {
    const cellSize = 1
}

class HTMLWindow {
    var onload dynamic
    var onresize dynamic
}

@entry
def main {
    window.onload = => {
        const inputCanvas = document.getElementById("voronoi-input-canvas") as HTMLCanvasElement
        const outputCanvas = document.getElementById("voronoi-output-canvas") as HTMLCanvasElement
        const controller = Controller.new(inputCanvas, outputCanvas)
        controller.draw
        controller.start
        if !RELEASE {
            # Expose this for in-browser debugging
            (window as dynamic).controller = controller
        }

        if isTouchDevice {
            document.getElementById("instructions").innerHTML = "Pinch and drag to move around."
        }
    }
}

